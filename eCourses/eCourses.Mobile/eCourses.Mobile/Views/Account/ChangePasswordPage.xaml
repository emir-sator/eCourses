<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="eCourses.Mobile.Views.Account.ChangePasswordPage"
             Title="Privacy settings">

    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="buttonStyle" TargetType="Button">
                <Setter Property="BackgroundColor" Value="Teal" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
    
    <ContentPage.Content>
        <StackLayout Padding="30" >
           
            <Label Text="Old password" ></Label>
            <Entry x:Name="OldPassword" IsPassword="True"></Entry>

            <Label Text="New password"></Label>
            <Entry x:Name="NewPassword" IsPassword="True"></Entry>

            <Label Text="Confirm password"></Label>
            <Entry x:Name="ConfirmPassword" IsPassword="True"></Entry>

            <Button Clicked="Button_Clicked" HorizontalOptions="FillAndExpand" Text="Save changes" Style="{StaticResource buttonStyle}"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>